<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
   <!-- 
   [마이바티스] 스프링에서 "_"를 사용한 컬럼명을 사용 시(BOOK 테이블의 BOOK_ID)
   카멜케이스로 읽어줌(bookId)
   ex) 테이블 컬러명이 member_id인 경우 jsp화면단에서 이 값을 사용 시 memberId로 사용
   -->
   <settings>
      <setting name="mapUnderscoreToCamelCase" value="true"/>
   </settings>
   <!-- 자주 사용하는 타입의 별칭을 세팅 -->
   <typeAliases>
       <typeAlias type="kr.or.ddit.vo.EmpVO" alias="empVo" /> 
       <typeAlias type="kr.or.ddit.vo.CustVO" alias="custVo" /> 
       <typeAlias type="kr.or.ddit.vo.CarVO" alias="carVo" /> 
       <typeAlias type="kr.or.ddit.vo.PerSerVO" alias="perSerVo" /> 
       <typeAlias type="kr.or.ddit.vo.MfrVO" alias="mfrVo" /> 
       <typeAlias type="kr.or.ddit.vo.FileDetailVO" alias="fileDetailVo" /> 
       <typeAlias type="kr.or.ddit.vo.FileGroupVO" alias="fileGroupVo" /> 
       <typeAlias type="kr.or.ddit.vo.EmpAuthVO" alias="empAuthVo" /> 
       <typeAlias type="kr.or.ddit.vo.PerReplyVO" alias="perRelpyVo" /> 
   </typeAliases>
</configuration>
